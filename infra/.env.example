# Docker Compose Environment Variables
# Copy this file to .env.development and customize the values

# MySQL Database Configuration
# IMPORTANT: Change these default passwords for production use
MYSQL_ROOT_PASSWORD=your-secure-root-password-here
MYSQL_DATABASE=app_db
MYSQL_USER=app_user
MYSQL_PASSWORD=your-secure-password-here

# Flask Configuration
FLASK_APP=app.main:app

# Redis Configuration for Rate Limiting
# Set to 'true' to enable rate limiting (requires Redis)
RATE_LIMIT_ENABLED=true
REDIS_PASSWORD=your-secure-redis-password-here

# Development Tips:
# - Use strong, unique passwords (at least 16 characters)
# - Never commit .env.development to version control
# - For local development, you can use simpler passwords
# - For production, always use strong passwords and secrets
